<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kth.csc.ubicomp.ubishopper" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.kth.csc.ubicomp.ubishopper.ScanActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_scan" >
        </activity>
        <activity
            android:name="se.kth.csc.ubicomp.ubishopper.userinterests.UserInterestActivity"
            android:label="@string/title_activity_user_interest" >
        </activity>
        <activity
            android:name="se.kth.csc.ubicomp.ubishopper.ProductActivity"
            android:label="@string/title_activity_product" >
        </activity>

        <!-- Permissions -->

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.CAMERA"/>

        <!-- Uses Features -->

        <uses-feature android:name="android.hardware.camera" android:required="false"/>
        <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
        <uses-feature android:name="android.hardware.camera.front" android:required="false"/>
        <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="false"/>

    </application>

</manifest>
