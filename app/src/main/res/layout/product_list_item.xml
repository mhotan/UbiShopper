<?xml version="1.0" encoding="utf-8"?>

<se.kth.csc.ubicomp.ubishopper.explore.ProductListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip">

    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@null"
        android:src="@drawable/ic_no_image"
        android:id="@+id/product_list_item_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:text="Product Title"
        android:id="@+id/product_list_item_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/product_list_item_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price: $14.99"
        android:id="@+id/product_list_item_price"
        android:layout_below="@+id/product_list_item_title"
        android:layout_toRightOf="@+id/product_list_item_image"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:id="@+id/product_list_item_description"
        android:text="Product Description"
        android:layout_below="@+id/product_list_item_price"
        android:layout_toRightOf="@+id/product_list_item_image"
        android:layout_alignBottom="@+id/product_list_item_image"
        />

</se.kth.csc.ubicomp.ubishopper.explore.ProductListItem>